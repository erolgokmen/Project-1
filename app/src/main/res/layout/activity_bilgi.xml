<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BilgiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kullanıcı Giriş:Şifre Kontrol,Hata Mesajı,Başarılı Giriş" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menü Ekranı:İlgili Aktivitelere Yönlendirme Ekranı" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="E-mail Oluşturma ve Gönderme Ekranı:Kime, Başlık, İçerik ve Ek(Attachment) Bilgileri b. E-mail Gönderme işlemi başka bir uygulama tarafından gerçekleştirilmeli (Örn: Gmail)" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kullanıcıları Listeleme Ekranı:RecyclerView yardımı ile sistemde kayıtlı kullanıcıların Kullanıcı Adı, Şifre, Resim Bilgilerini gösterme" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kullanıcı Ayarlarını Gösterme/Değiştirme Ekranı:Kullanıcı Adı,Cinsiyet,Boy,Kilo,Yaş,Uygulama Modu(Dark/Light) bilgilerini farklı UI komponentlerini kullanarak SharedPreferences’a kaydetme ve SharedPreferences’dan okuma" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sensör Ekranı:Işık sensörü yardımı ile ortam karanlık iken arka plan siyah yazılar beyaz, ortam aydınlık iken arka plan beyaz yazılar siyah gösterilmeli b. Telefon masa üzerinde 5 sn hareketsiz kalırsa (ivmeölçer sensörü kullanılmalı) uygulama mesaj verip kendini kapatmalı" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>